<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000001">


        //--------------------- NAZWA KREDYTU ---------------------


        <TextView
            android:id="@+id/naglowek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="DODAWANIE KREDYTU"
            android:textSize="23sp"
            android:background="#FF1DA4CE"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />

        <ImageView
            android:id="@+id/nazwaImage"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_below="@id/naglowek"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/pierwszy" />

        <EditText
            android:id="@+id/etName"
            android:layout_below="@id/naglowek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nazwaImage"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="20dp"
            android:inputType="textPersonName"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:hint="Nazwa Kredytu"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/linia1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nazwaImage"
            android:layout_centerHorizontal="true"
            android:background="#0a8cc1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        //--------------------- DATA ZAWARCIA KREDYTU ---------------------


        <EditText
            android:id="@+id/dzienData"
            android:layout_below="@id/linia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/openCalendar1"
            android:layout_marginLeft="20dp"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:textSize="17sp"
            android:inputType="number"
            android:hint="DD"
            android:layout_marginRight="0.5dp"
            />
        <TextView
            android:id="@+id/slash11"
            android:layout_below="@id/linia1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dzienData"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:textSize="17sp"
            android:text="/"
            />
        <EditText
            android:id="@+id/miesiacData"
            android:layout_below="@id/linia1"
            android:layout_toRightOf="@id/slash11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:textSize="17sp"
            android:inputType="number"
            android:hint="MM"
            android:layout_marginRight="0.5dp"
            />
        <TextView
            android:id="@+id/slash12"
            android:layout_below="@id/linia1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/miesiacData"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:textSize="17sp"
            android:text="/"


            />
        <EditText
            android:id="@+id/rokData"
            android:layout_below="@id/linia1"
            android:layout_toRightOf="@id/slash12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:textSize="17sp"
            android:inputType="number"
            android:hint="RRRR"
            />
        <Button
            android:id="@+id/openCalendar1"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_below="@id/linia1"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/drugi"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/linia2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/openCalendar1"
            android:layout_centerHorizontal="true"
            android:background="#0a8cc1"
            android:layout_marginTop="7dp"
            />

        //--------------------- KWOTA KREDYTU ---------------------

        <ImageView
            android:id="@+id/nazwaImage3"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_below="@id/linia2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/trzeci" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_below="@id/linia2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nazwaImage3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:hint="Kwota "
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/waluta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/linia2"
            android:text="zł"
            android:layout_marginTop="17dp"
            android:textColor="#FF0A8CC1"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/linia3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/etPassword"
            android:layout_centerHorizontal="true"
            android:background="#0a8cc1"
            android:layout_marginTop="7dp"
            />


        //--------------------- ILOŚĆ RAT KREDYTOWYCH ---------------------

        <ImageView
            android:id="@+id/nazwaImage4"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_below="@id/linia3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/czwarty" />

        <EditText
            android:id="@+id/iloscRatKredytu"
            android:layout_below="@id/linia3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nazwaImage4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:hint="Ilość Rat"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/linia4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iloscRatKredytu"
            android:layout_centerHorizontal="true"
            android:background="#0a8cc1"
            android:layout_marginTop="7dp"
            />

        //--------------------- ILOŚĆ WPŁACONYCH RAT KREDYTOWYCH ---------------------
        <ImageView
            android:id="@+id/nazwaImage5"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_below="@id/linia4"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/piaty" />

        <EditText
            android:id="@+id/iloscWplaconychKredytu"
            android:layout_below="@id/linia4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nazwaImage5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:hint="Ilość Wpłaconych Rat"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/linia5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iloscWplaconychKredytu"
            android:layout_centerHorizontal="true"
            android:background="#0a8cc1"
            android:layout_marginTop="7dp"
            />





        //--------------------- DZIEŃ ZAPŁATY ZA KREDYT---------------------


        <ImageView
            android:id="@+id/nazwaImage6"
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:layout_below="@id/linia5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/szosty" />

        <EditText
            android:id="@+id/dzienKredytu"
            android:layout_below="@id/linia5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nazwaImage6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:textColor="#c7c7c9"
            android:textColorHint="#848383"
            android:hint="Dzień Zapłaty (nr. dnia)"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/linia6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dzienKredytu"
            android:layout_centerHorizontal="true"
            android:background="#0a8cc1"
            android:layout_marginTop="7dp"
            />


        <TextView
            android:id="@+id/puste"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/linia6"
            />


        //--------------------- PRZYCISK ZAPISU ---------------------

        <Button

            android:id="@+id/btnLogin"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/puste"
            android:background="#1da4ce"
            android:text="ZAPISZ"
            android:layout_marginLeft="2dp"
            android:textColor="#E8EAF6"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/oddzielenie"
            android:layout_below="@id/puste"
            android:layout_marginTop="10dp"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btnLogin"
            android:background="#000"
            android:text=" "
            />
        <Button
            android:id="@+id/btnView"
            android:layout_width="1750dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/puste"
            android:layout_toRightOf="@id/oddzielenie"
            android:background="#1da4ce"
            android:text="Główna"
            android:textColor="#E8EAF6"
            android:textSize="20sp"
            android:layout_marginRight="2dp"
            />

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_below="@id/puste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            />


    </RelativeLayout>
</ScrollView>
