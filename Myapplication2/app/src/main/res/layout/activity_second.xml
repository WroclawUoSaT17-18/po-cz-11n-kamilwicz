<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000001"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#c7cdcd"
        android:text="Kwota Wszystkich Kredytów"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:textColor="#59b801"
        android:textSize="20dp"
        android:text="0 zł"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview2"
        android:layout_centerHorizontal="true"
        android:textColor="#c7cdcd"
        android:text="Kwota Pozostała do Zapłaty"
        android:layout_marginTop="7dp"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:text="0 zł"
        android:textColor="#1da4ce"
        android:textSize="30dp"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:background="#0a8cc1"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/nazwa"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:text="KREDYTY"
        android:textSize="13sp"
        android:textColor="#0a8cc1"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/linia1.1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/nazwa"
        android:layout_centerHorizontal="true"
        android:background="#0a8cc1"
        android:layout_marginTop="7dp"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/linia1.1"
        android:layout_above="@id/btnBack">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linia1.1"
            android:layout_marginTop="7dp"
            >
            ****************************************************
            <TextView
                android:id="@+id/nazwa1"
                android:text="Pralka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:id="@+id/etDzienData_SL"
                android:layout_below="@id/nazwa1"
                android:text="08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/slash"
                android:layout_below="@id/nazwa1"
                android:layout_toRightOf="@id/etDzienData_SL"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/etMiesiacData_SL"
                android:layout_below="@id/nazwa1"
                android:layout_toRightOf="@id/slash"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/slash2"
                android:layout_below="@id/nazwa1"
                android:layout_toRightOf="@id/etMiesiacData_SL"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/etRokData_SL"
                android:layout_below="@id/nazwa1"
                android:layout_toRightOf="@id/slash2"
                android:text="1997"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/procent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/nazwa1"
                android:layout_marginTop="2dp"
                android:text="19"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/znak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_below="@id/nazwa1"
                android:layout_marginTop="2dp"
                android:text="%"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/etRokDataKoniec_SL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/nazwa1"
                android:layout_marginTop="2dp"
                android:text="2025"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/slash3"
                android:layout_below="@id/nazwa1"
                android:layout_toLeftOf="@id/etRokDataKoniec_SL"
                android:text="/"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/etMiesiacDataKoniec_SL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/slash3"
                android:layout_below="@id/nazwa1"
                android:layout_marginTop="2dp"
                android:text="12"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/slash4"
                android:layout_below="@id/nazwa1"
                android:layout_toLeftOf="@id/etMiesiacDataKoniec_SL"
                android:text="/"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/etDzienDataKoniec_SL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/slash4"
                android:layout_below="@id/nazwa1"
                android:layout_marginTop="2dp"
                android:text="08"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <ProgressBar
                android:id="@+id/progressBar1"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/procent1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:progressBackgroundTint="#f2f0f0"
                />
            <TextView
                android:id="@+id/start1"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                android:layout_marginLeft="4dp"
                android:layout_below="@id/progressBar1"
                />
            <TextView
                android:text="zł"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/start1"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                android:layout_marginLeft="4dp"
                android:layout_below="@id/progressBar1"
                />
            <TextView
                android:id="@+id/pozostala1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar1"
                android:text="570"
                android:layout_centerInParent="true"
                android:textColor="#59b801"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="203dp"
                android:layout_below="@id/progressBar1"
                android:text="zł"
                android:textColor="#59b801"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                />


            <TextView
                android:id="@+id/kwota1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nominal2"
                android:layout_marginRight="4dp"
                android:layout_below="@id/progressBar1"
                android:layout_marginTop="2dp"
                android:text="3000"
                android:textSize="15dp"
                android:textColor="#bebcbc"
                />
            <TextView
                android:id="@+id/nominal2"
                android:text="zł"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:textColor="#bebcbc"
                android:layout_marginRight="4dp"
                android:layout_below="@id/progressBar1"
                />
            <TextView
                android:id="@+id/linia1.2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/nominal2"
                android:layout_centerHorizontal="true"
                android:background="#0a8cc1"
                android:layout_marginTop="7dp"
                />

            ******************************************8


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#1da4ce"
        android:text="Dodaj Nowy"
        android:textColor="#E8EAF6"
        android:textSize="20sp"

        />




</RelativeLayout>
